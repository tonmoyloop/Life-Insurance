<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="550" prefWidth="700" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CustomerQueriesController">

    <!-- Title -->
    <Label layoutX="201.0" layoutY="14.0" prefHeight="35.0" prefWidth="259.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Customer Queries" AnchorPane.leftAnchor="201.0" AnchorPane.rightAnchor="240.0" AnchorPane.topAnchor="14.0" />

    <!-- Pending Messages Table -->
    <Label text="Pending Queries:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="60" />
    <TableView fx:id="tblPendingQueries" AnchorPane.bottomAnchor="200" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="80">
        <columns>
            <TableColumn fx:id="colCustomer" prefWidth="272.0" text="Customer" />
            <TableColumn fx:id="colQuery" prefWidth="345.0" text="Query" />
            <TableColumn fx:id="colStatus" prefWidth="83.0" text="Status" />
        </columns>
    </TableView>

    <!-- Selected Query Reply -->
    <Label text="Reply:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="360" />
    <TextArea fx:id="txtReply" prefHeight="80" promptText="Type your response here..." AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="380" />

    <!-- Send Reply Button -->
    <Button onAction="#handleSendReply" prefWidth="120" text="Send Reply" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="470" />

    <!-- Status Message -->
    <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="470" />

    <!-- Logout Button -->
    <Button layoutX="560.0" layoutY="475.0" onAction="#handleLogout" prefWidth="100" text="Logout" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="40.0" />

</AnchorPane>
