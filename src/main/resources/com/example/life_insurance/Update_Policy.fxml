<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500" prefWidth="700" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PolicyDocumentsController">

    <!-- Title -->
    <Label layoutX="209.0" layoutY="14.0" maxWidth="Infinity" prefHeight="35.0" prefWidth="302.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Policy Documents Update" AnchorPane.leftAnchor="209.0" AnchorPane.rightAnchor="189.0" AnchorPane.topAnchor="14.0" />

    <!-- Policy Document Selection -->
    <Label text="Select Policy Document:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="60" />
    <ComboBox fx:id="policySelector" onAction="#policySelectorbutton" promptText="Select Document" AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="60" />

    <!-- Document Fields / Edit Area -->
    <Label text="Edit Document:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="100" />
    <TextArea fx:id="txtPolicyEdit" promptText="Edit document fields here..." AnchorPane.bottomAnchor="140" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="120" />

    <!-- Upload Revised File Button -->
    <Button onAction="#handleUploadFile" prefHeight="30" prefWidth="160" text="Upload Revised File" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="40" />

    <!-- Save Changes Button -->
    <Button onAction="#handleSaveChanges" prefHeight="30" prefWidth="140" text="Save Changes" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="220" />

    <!-- Status / Success Message -->
    <Label fx:id="lblStatusMessage" style="-fx-text-fill: green;" text="" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" />

    <!-- Logout Button -->
    <Button layoutX="539.0" layoutY="390.0" onAction="#handleLogout" prefHeight="30" prefWidth="100" text="Logout" AnchorPane.bottomAnchor="80.0" AnchorPane.rightAnchor="61.0" />

</AnchorPane>
