<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="642.0" prefWidth="702.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.InteractionLogsController">

    <Label layoutX="239.0" layoutY="14.0" prefHeight="35.0" prefWidth="302.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Interaction Logs" AnchorPane.leftAnchor="239.0" AnchorPane.rightAnchor="161.0" AnchorPane.topAnchor="14.0" />

    <Label text="Recent Interactions:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="60" />
    <TableView fx:id="tblInteractions" prefHeight="279.0" prefWidth="622.0" AnchorPane.bottomAnchor="283.0" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="80">
        <columns>
            <TableColumn fx:id="colDate" prefWidth="100" text="Date" />
            <TableColumn fx:id="colTime" prefWidth="100" text="Time" />
            <TableColumn fx:id="colMode" prefWidth="100" text="Mode" />
            <TableColumn fx:id="colNote" prefWidth="400" text="Note" />
        </columns>
    </TableView>

    <Label text="Add New Entry:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="380" />
    <Label text="Date:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="400" />
    <DatePicker fx:id="dateEntry" prefWidth="150" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="420" />

    <Label text="Time:" AnchorPane.leftAnchor="210" AnchorPane.topAnchor="400" />
    <TextField fx:id="txtTime" prefWidth="100" promptText="HH:MM" AnchorPane.leftAnchor="210" AnchorPane.topAnchor="420" />

    <Label text="Mode:" AnchorPane.leftAnchor="330" AnchorPane.topAnchor="400" />
    <ComboBox fx:id="comboMode" prefWidth="150" promptText="Call/Email/Visit" AnchorPane.leftAnchor="330" AnchorPane.topAnchor="420" />

    <Label text="Note:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="450" />
    <TextArea fx:id="txtNote" prefHeight="60" promptText="Enter note" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="470" />

    <Button onAction="#handleSaveLog" prefWidth="120" text="Save Log" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="540" />
    <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="540" />

    <Button onAction="#handleLogout" prefWidth="100" text="Logout" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="40" />

</AnchorPane>
