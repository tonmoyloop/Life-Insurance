<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AuditManagementController">

    <!-- Title Label -->
    <Label maxWidth="Infinity" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Audit Management" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10" />

    <!-- Department Selector ComboBox -->
    <ComboBox fx:id="deptSelector" promptText="Select Department" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="60" />

    <!-- Start Audit Button -->
    <Button onAction="#handleStartAudit" prefHeight="30" prefWidth="120" text="Start Audit" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="100" />

    <!-- Audit Checklist TableView -->
    <TableView fx:id="auditChecklist" AnchorPane.bottomAnchor="160" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="140">
        <columns>
            <TableColumn fx:id="colAuditPoint" prefWidth="300" text="Audit Point" />
            <TableColumn fx:id="colAuditStatus" prefWidth="200" text="Status" />
        </columns>
    </TableView>

    <!-- Remarks TextArea -->
    <TextArea fx:id="remarksField" prefHeight="60" promptText="Enter Remarks" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" />

    <!-- Submit Audit Button -->
    <Button onAction="#handleSubmitAudit" prefHeight="30" prefWidth="140" text="Submit Audit" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="40" />

    <!-- Back Button -->
    <Button onAction="#handleBack" prefHeight="30" prefWidth="100" text="Back" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="200" />

</AnchorPane>
