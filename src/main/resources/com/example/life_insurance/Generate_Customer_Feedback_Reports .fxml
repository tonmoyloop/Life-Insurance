<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500" prefWidth="700" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FeedbackReportsController">

    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Feedback Reports" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10" />

    <Label text="Select Date Range:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="60" />
    <DatePicker fx:id="startDate" prefWidth="150" promptText="Start Date" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="80" />
    <DatePicker fx:id="endDate" prefWidth="150" promptText="End Date" AnchorPane.leftAnchor="210" AnchorPane.topAnchor="80" />

    <Label text="Feedback Type:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="120" />
    <ComboBox fx:id="comboFeedbackType" prefWidth="200" promptText="Select Type" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="140" />

    <Button onAction="#handleGenerateReport" prefWidth="150" text="Generate Report" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="180" />

    <Label text="Report Summary:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="220" />
    <TextArea fx:id="txtReportSummary" editable="false" promptText="Report will appear here" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="240" />

    <Button onAction="#handleExportPDF" prefWidth="120" text="Download PDF" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="40" />
    <Button onAction="#handleExportExcel" prefWidth="120" text="Export Excel" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="180" />

    <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="320" AnchorPane.rightAnchor="40" />

    <Button onAction="#handleLogout" prefWidth="100" text="Logout" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="40" />

</AnchorPane>
