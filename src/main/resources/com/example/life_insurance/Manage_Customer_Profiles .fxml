<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="667.0" prefWidth="718.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CustomerProfilesController">

    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Customer Profiles" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10" />

    <Label text="Search by Policy Number:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="60" />
    <TextField fx:id="txtPolicySearch" prefHeight="30" promptText="Enter Policy Number" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="300" AnchorPane.topAnchor="80" />
    <Button onAction="#handleSearch" prefWidth="120" text="Search" AnchorPane.leftAnchor="500" AnchorPane.topAnchor="80" />

    <TableView fx:id="tblCustomerData" prefHeight="267.0" prefWidth="638.0" AnchorPane.bottomAnchor="270.0" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="130">
        <columns>
            <TableColumn fx:id="colCustomerName" prefWidth="150" text="Name" />
            <TableColumn fx:id="colPolicyNumber" prefWidth="150" text="Policy Number" />
            <TableColumn fx:id="colContact" prefWidth="150" text="Contact" />
            <TableColumn fx:id="colEmail" prefWidth="200" text="Email" />
        </columns>
    </TableView>

    <Label text="Edit Contact Info:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="400" />
    <TextField fx:id="txtEditContact" prefHeight="30" promptText="Contact Info" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="300" AnchorPane.topAnchor="420" />
    <Label text="Edit Address:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="460" />
    <TextField fx:id="txtEditAddress" prefHeight="30" promptText="Address" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="300" AnchorPane.topAnchor="480" />

    <Button onAction="#handleSaveChanges" prefWidth="140" text="Save Changes" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="520" />
    <Label fx:id="lblStatus" prefWidth="460.0" style="-fx-text-fill: green;" text="" AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="520" />

    <Button onAction="#handleLogout" prefWidth="100" text="Logout" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="40" />

</AnchorPane>
