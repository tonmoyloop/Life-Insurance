<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="700" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DepartmentComplianceController">

    <!-- Title -->
    <Label layoutX="141.0" layoutY="14.0" maxWidth="Infinity" prefHeight="35.0" prefWidth="374.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Verify Departmental Compliance" AnchorPane.leftAnchor="141.0" AnchorPane.rightAnchor="185.0" AnchorPane.topAnchor="14.0" />

    <!-- Department Selection -->
    <Label text="Select Department:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="60" />
    <ComboBox fx:id="departmentSelector" prefHeight="25.0" prefWidth="248.0" promptText="Select Department" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="272.0" AnchorPane.topAnchor="60" />

    <!-- Compliance Area Selection -->
    <Label text="Select Compliance Area:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="100" />
    <ComboBox fx:id="complianceAreaSelector" prefHeight="25.0" prefWidth="248.0" promptText="Select Area" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="272.0" AnchorPane.topAnchor="100" />

    <!-- Retrieve Checklist Button -->
    <Button layoutX="265.0" layoutY="138.0" onAction="#handleRetrieveChecklist" prefHeight="30" prefWidth="150" text="Retrieve Checklist" AnchorPane.leftAnchor="265.0" AnchorPane.topAnchor="138.0" />

    <!-- Checklist TableView -->
    <TableView fx:id="checklistTable" AnchorPane.bottomAnchor="160" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="180">
        <columns>
            <TableColumn fx:id="colItem" prefWidth="303.0" text="Compliance Item" />
            <TableColumn fx:id="colStatus" prefWidth="136.0" text="Status" />
            <TableColumn fx:id="colComments" prefWidth="180.0" text="Comments" />
        </columns>
    </TableView>

    <!-- Submit Verification Report Button -->
    <Button onAction="#handleSubmitReport" prefHeight="30" prefWidth="180" text="Submit Verification" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="40" />

    <!-- Logout Button -->
    <Button onAction="#handleLogout" prefHeight="30" prefWidth="100" text="Logout" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="250" />

    <!-- Summary Display Area -->
    <TextArea fx:id="txtSummary" editable="false" prefHeight="40" promptText="Verification Summary" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" />

</AnchorPane>
