<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="550" prefWidth="700" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ComplaintTrackerController">

    <Label layoutX="220.0" layoutY="14.0" prefHeight="35.0" prefWidth="217.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Complaint Tracker" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="263.0" AnchorPane.topAnchor="14.0" />

    <Label text="Enter Complaint ID or Customer Name:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="60" />
    <TextField fx:id="txtSearch" prefHeight="30" promptText="Complaint ID or Customer Name" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="300" AnchorPane.topAnchor="80" />
    <Button onAction="#handleSearch" prefWidth="120" text="Search" AnchorPane.leftAnchor="500" AnchorPane.topAnchor="80" />

    <TableView fx:id="tblComplaintDetails" AnchorPane.bottomAnchor="180" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="130">
        <columns>
            <TableColumn fx:id="colComplaintID" prefWidth="100" text="Complaint ID" />
            <TableColumn fx:id="colCustomer" prefWidth="200" text="Customer" />
            <TableColumn fx:id="colStatus" prefWidth="150" text="Status" />
            <TableColumn fx:id="colRemarks" prefWidth="250" text="Remarks" />
        </columns>
    </TableView>

    <Label text="Update Remarks:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="400" />
    <TextArea fx:id="txtRemarks" prefHeight="80" promptText="Enter remarks or forward to department" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="420" />

    <Button onAction="#handleUpdate" prefWidth="120" text="Update" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="510" />

    <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="510" />

    <Button onAction="#handleLogout" prefWidth="100" text="Logout" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="40" />
</AnchorPane>
