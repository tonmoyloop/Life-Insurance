<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ComplianceCalendarController">

    <!-- Title -->
    <Label layoutX="231.0" layoutY="14.0" maxWidth="Infinity" prefHeight="35.0" prefWidth="259.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Compliance Calendar" AnchorPane.leftAnchor="231.0" AnchorPane.rightAnchor="310.0" AnchorPane.topAnchor="14.0" />
    <TableView fx:id="calendarTable" AnchorPane.bottomAnchor="250" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="80">
        <columns>
            <TableColumn fx:id="colDate" prefWidth="248.0" text="Date" />
            <TableColumn fx:id="colTasks" prefWidth="471.0" text="Tasks" />
        </columns>
    </TableView>

    <!-- Status Message -->
    <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" AnchorPane.bottomAnchor="60" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" />

    <!-- Logout Button -->
    <Button onAction="#handleLogout" prefHeight="30" prefWidth="100" text="Logout" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="40" />

     <!-- Mark Task Completed -->
     <Button layoutX="51.0" layoutY="440.0" onAction="#handleMarkCompleted" prefWidth="180" text="Mark Task Completed" />
     <Button layoutX="249.0" layoutY="440.0" onAction="#handleAddReminder" prefWidth="140" text="Add Reminder" />

     <!-- Add Reminder -->
     <TextField fx:id="txtReminder" layoutX="45.0" layoutY="398.0" prefHeight="25.0" prefWidth="358.0" promptText="Add Reminder / Notification" />

     <!-- Selected Task Info -->
     <TextField fx:id="txtSelectedTask" editable="false" layoutX="40.0" layoutY="357.0" prefHeight="25.0" prefWidth="364.0" promptText="Selected Task" />

</AnchorPane>
