<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegulatoryGuidelinesController">

    <!-- Title -->
    <Label fx:id="lblTitle" style="-fx-font-size: 24;" text="Regulatory Guidelines" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="10" />

    <!-- Table -->
    <TableView fx:id="guidelinesTable" layoutX="20.0" layoutY="90.0" prefHeight="201.0" prefWidth="502.0" AnchorPane.bottomAnchor="249.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="90.0">

        <columns>
            <TableColumn fx:id="colGuidelineTitle" prefWidth="300" text="Guideline Title" />
            <TableColumn fx:id="colEffectiveDate" prefWidth="200" text="Effective Date" />
        </columns>
    </TableView>

    <!-- Buttons -->
    <Button layoutX="20.0" layoutY="317.0" onAction="#handleViewDetails" text="View Details" AnchorPane.bottomAnchor="198.0" AnchorPane.leftAnchor="20.0" />

    <Button layoutX="140.0" layoutY="317.0" onAction="#handleDownload" text="Download" AnchorPane.bottomAnchor="198.0" AnchorPane.leftAnchor="140.0" />

    <Button layoutX="260.0" layoutY="317.0" onAction="#handlePrint" text="Print" AnchorPane.bottomAnchor="198.0" AnchorPane.leftAnchor="260.0" />

    <Button layoutX="481.0" layoutY="317.0" onAction="#handleBack" text="Back" AnchorPane.bottomAnchor="198.0" AnchorPane.rightAnchor="20.0" />

</AnchorPane>
