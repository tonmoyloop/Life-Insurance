<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="467.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance.Manage_Investment_RecordsController">
    <children>

        <!-- STEP 1: DATE INPUTS -->
        <Label layoutX="30.0" layoutY="30.0" text="Start Date:" />
        <DatePicker fx:id="startDate" layoutX="30.0" layoutY="50.0" onAction="#startDateOnAction" prefHeight="26.0" prefWidth="87.0" />

        <Label layoutX="373.0" layoutY="21.0" text="End Date:" />
        <DatePicker fx:id="endDate" layoutX="331.0" layoutY="50.0" onAction="#endDateOnAction" prefHeight="26.0" prefWidth="94.0" />

        <!-- STEP 2: LOAD BUTTON -->
        <Button fx:id="loadButton" layoutX="30.0" layoutY="100.0" mnemonicParsing="false" onAction="#loadButtonOnAction" prefHeight="26.0" prefWidth="140.0" text="Get Investment Data" />

        <!-- STEP 3: THE TABLE -->
        <TableView fx:id="investTable" layoutX="30.0" layoutY="150.0" prefHeight="107.0" prefWidth="440.0">
            <columns>
                <TableColumn fx:id="colAsset" prefWidth="120.0" text="Asset Name" />
                <TableColumn fx:id="colValue" prefWidth="100.0" text="Current Value" />
                <TableColumn fx:id="colRoi" prefWidth="100.0" text="ROI " />
                <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
            </columns>
        </TableView>

        <!-- STEP 4: UPDATE VALUE -->
        <Label layoutX="30.0" layoutY="300.0" text="Update Current Value for Selected Asset:" />

        <Label layoutX="40.0" layoutY="336.0" text="New Value:" />
        <TextField fx:id="valueInput" layoutX="39.0" layoutY="360.0" prefHeight="26.0" prefWidth="77.0" />

        <Button fx:id="updateButton" layoutX="329.0" layoutY="347.0" mnemonicParsing="false" onAction="#updateButtonOnAction" prefHeight="26.0" prefWidth="87.0" text="Update Value" />

        <!-- STEP 5: SORT BUTTON -->
        <Button fx:id="sortButton" layoutX="39.0" layoutY="410.0" mnemonicParsing="false" onAction="#sortButtonOnAction" prefHeight="26.0" prefWidth="140.0" text="Sort by ROI" />

    </children>
</AnchorPane>
