<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="388.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance.Reconcile_Bank_StatementsController">
    <children>

        <!-- STEP 1: DATE SELECTION -->
        <Label layoutX="30.0" layoutY="30.0" text="Statement Start Date:" />
        <DatePicker fx:id="startDate" layoutX="30.0" layoutY="50.0" onAction="#startDateOnAction" prefHeight="26.0" prefWidth="97.0" />

        <Label layoutX="323.0" layoutY="21.0" text="Statement End Date:" />
        <DatePicker fx:id="endDate" layoutX="357.0" layoutY="50.0" onAction="#endDateOnAction" prefHeight="26.0" prefWidth="75.0" />

        <!-- STEP 2: LOAD BUTTON -->
        <Button fx:id="loadButton" layoutX="30.0" layoutY="100.0" mnemonicParsing="false" onAction="#loadButtonOnAction" prefHeight="26.0" prefWidth="142.0" text="Load Ledger Data" />

        <!-- STEP 3: THE TABLE -->
        <TableView fx:id="reconTable" layoutX="30.0" layoutY="150.0" prefHeight="105.0" prefWidth="412.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
                <TableColumn fx:id="colDesc" prefWidth="140.0" text="Description" />
                <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
            </columns>
        </TableView>

        <!-- STEP 4: FILTER BUTTON -->
        <Button fx:id="filterButton" layoutX="309.0" layoutY="276.0" mnemonicParsing="false" onAction="#filterButtonOnAction" prefHeight="26.0" prefWidth="114.0" text="Show Unmatched Only" />

        <!-- STEP 5: MATCH ACTION BUTTON -->
        <Button fx:id="matchButton" layoutX="277.0" layoutY="325.0" mnemonicParsing="false" onAction="#matchButtonOnAction" prefHeight="26.0" prefWidth="160.0" text="Match Selected Rows" />

    </children>
</AnchorPane>
