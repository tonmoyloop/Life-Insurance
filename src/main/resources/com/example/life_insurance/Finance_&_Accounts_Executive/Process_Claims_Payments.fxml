<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="402.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance.Process_Claims_PaymentsController">
    <children>

        <Label layoutX="30.0" layoutY="30.0" text="Due Date:" />
        <TextField fx:id="dateInput" layoutX="30.0" layoutY="50.0" prefHeight="26.0" prefWidth="94.0" />

        <Button fx:id="loadButton" layoutX="376.0" layoutY="50.0" mnemonicParsing="false" onAction="#loadButtonOnAction" prefHeight="26.0" prefWidth="94.0" text="Load Pending Claims" />

        <Label layoutX="30.0" layoutY="100.0" text="Pending Claims Queue:" />

        <TableView fx:id="claimsTable" layoutX="30.0" layoutY="120.0" prefHeight="141.0" prefWidth="422.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                <TableColumn fx:id="colRecipient" prefWidth="150.0" text="Recipient" />
                <TableColumn fx:id="colAmount" prefWidth="100.0" text="Amount" />
                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>

        <Button fx:id="authButton" layoutX="34.0" layoutY="288.0" mnemonicParsing="false" onAction="#authButtonOnAction" prefHeight="26.0" prefWidth="114.0" text="Authorize Selected Payment" />

        <Label fx:id="statusMessage" layoutX="30.0" layoutY="380.0" />

    </children>
</AnchorPane>
