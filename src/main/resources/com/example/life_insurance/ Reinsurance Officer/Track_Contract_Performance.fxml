<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance.Track_Contract_PerformanceController">
    <children>

        <Label layoutX="20.0" layoutY="20.0" text="Start Date" />
        <DatePicker fx:id="startDatePicker" layoutX="20.0" layoutY="40.0" />

        <Label layoutX="250.0" layoutY="20.0" text="End Date" />
        <DatePicker fx:id="endDatePicker" layoutX="250.0" layoutY="40.0" />

        <Label layoutX="20.0" layoutY="80.0" text="Partner Name" />
        <TextField fx:id="partnerInput" layoutX="20.0" layoutY="100.0" />

        <Button fx:id="searchButton" layoutX="250.0" layoutY="100.0" mnemonicParsing="false" onAction="#searchButtonOnAction" text="Search" />

        <TableView fx:id="performanceTable" layoutX="20.0" layoutY="150.0" prefHeight="250.0" prefWidth="460.0">
            <columns>
                <TableColumn fx:id="colPartner" prefWidth="120.0" text="Partner" />
                <TableColumn fx:id="colPremium" prefWidth="100.0" text="Premium" />
                <TableColumn fx:id="colClaims" prefWidth="100.0" text="Claims" />
                <TableColumn fx:id="colMargin" prefWidth="100.0" text="Margin" />
            </columns>
        </TableView>

        <Label layoutX="20.0" layoutY="420.0" text="Row Details" />
        <TextArea fx:id="detailsArea" layoutX="20.0" layoutY="440.0" prefHeight="100.0" prefWidth="460.0" />

    </children>
</AnchorPane>
