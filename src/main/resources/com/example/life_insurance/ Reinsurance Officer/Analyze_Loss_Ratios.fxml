<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="516.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance.Analyze_Loss_RatiosController">
    <children>

        <Label layoutX="30.0" layoutY="30.0" text="Start Date:" />
        <DatePicker fx:id="startDate" layoutX="30.0" layoutY="50.0" prefHeight="26.0" prefWidth="102.0" />

        <Label layoutX="30.0" layoutY="90.0" text="End Date:" />
        <DatePicker fx:id="endDate" layoutX="30.0" layoutY="110.0" prefHeight="26.0" prefWidth="110.0" />

        <Label layoutX="30.0" layoutY="150.0" text="Product Line:" />
        <TextField fx:id="productInput" layoutX="30.0" layoutY="170.0" prefHeight="26.0" prefWidth="110.0" />

        <Button fx:id="calcButton" layoutX="30.0" layoutY="210.0" mnemonicParsing="false" onAction="#calcButtonOnAction" prefHeight="26.0" prefWidth="134.0" text="Calculate Ratios" />

        <TableView fx:id="ratioTable" layoutX="37.0" layoutY="250.0" prefHeight="148.0" prefWidth="415.0">
            <columns>
                <TableColumn fx:id="colPartner" prefWidth="120.0" text="Partner" />
                <TableColumn fx:id="colPremium" prefWidth="100.0" text="Premium" />
                <TableColumn fx:id="colClaims" prefWidth="100.0" text="Claims" />
                <TableColumn fx:id="colRatio" prefWidth="100.0" text="Ratio %" />
            </columns>
        </TableView>

        <Label layoutX="39.0" layoutY="414.0" text="Filter by Partner Name:" />
        <TextField fx:id="partnerInput" layoutX="43.0" layoutY="439.0" />

        <Button fx:id="filterButton" layoutX="205.0" layoutY="439.0" mnemonicParsing="false" onAction="#filterButtonOnAction" text="Filter" />

    </children>
</AnchorPane>
