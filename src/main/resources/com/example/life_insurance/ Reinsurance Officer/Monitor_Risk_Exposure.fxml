<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance.Monitor_Risk_ExposureController">
    <children>

        <Label layoutX="30.0" layoutY="30.0" text="Start Date:" />
        <DatePicker fx:id="startDate" layoutX="30.0" layoutY="50.0" />

        <Label layoutX="250.0" layoutY="30.0" text="End Date:" />
        <DatePicker fx:id="endDate" layoutX="250.0" layoutY="50.0" onAction="#endDateOnAction" />

        <Label layoutX="30.0" layoutY="100.0" text="Insurance Type:" />
        <TextField fx:id="typeInput" layoutX="30.0" layoutY="120.0" />

        <Label layoutX="250.0" layoutY="100.0" text="Region:" />
        <TextField fx:id="regionInput" layoutX="250.0" layoutY="120.0" />

        <Button fx:id="loadButton" layoutX="30.0" layoutY="160.0" mnemonicParsing="false" onAction="#loadButtonOnAction" prefWidth="400.0" text="Load Risk Data" />

        <TableView fx:id="riskTable" layoutX="30.0" layoutY="200.0" onSort="#riskTableOnAction" prefHeight="250.0" prefWidth="540.0">
            <columns>
                <TableColumn fx:id="colRegion" prefWidth="100.0" text="Region" />
                <TableColumn fx:id="colType" prefWidth="100.0" text="Type" />
                <TableColumn fx:id="colCoverage" prefWidth="150.0" text="Coverage " />
                <TableColumn fx:id="colRisk" prefWidth="100.0" text="Risk Level" />
            </columns>
        </TableView>

        <Button fx:id="sortButton" layoutX="30.0" layoutY="470.0" mnemonicParsing="false" onAction="#sortButtonOnAction" prefWidth="200.0" text="Sort by High Risk" />

    </children>
</AnchorPane>
