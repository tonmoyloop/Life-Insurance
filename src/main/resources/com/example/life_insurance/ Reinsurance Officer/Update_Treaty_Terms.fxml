<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="546.0" prefWidth="743.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance.Update_Treaty_TermsController">
    <children>

        <Label layoutX="30.0" layoutY="30.0" text="Select a Treaty:" />

        <TableView fx:id="mainTable" layoutX="30.0" layoutY="50.0" prefHeight="122.0" prefWidth="440.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="colDate" prefWidth="150.0" text="Date" />
                <TableColumn fx:id="colLimit" prefWidth="150.0" text="Limit" />
            </columns>
        </TableView>

        <Label layoutX="31.0" layoutY="182.0" text="Enter New Details:" />

        <Label layoutX="34.0" layoutY="214.0" text="New Effective Date:" />
        <DatePicker fx:id="dateInPc" layoutX="34.0" layoutY="240.0" onAction="#dateInPcOnAction" />

        <Label layoutX="40.0" layoutY="327.0" text="New Coverage Limit:" />
        <TextField fx:id="limitInput" layoutX="40.0" layoutY="354.0" />

        <Button fx:id="saveButton" layoutX="496.0" layoutY="477.0" mnemonicParsing="false" onAction="#saveButtonOnAction" prefWidth="200.0" text="Save Changes" />

        <Label layoutX="276.0" layoutY="275.0" text=" Version History:" />

        <TableView fx:id="historyTable" layoutX="265.0" layoutY="305.0" prefHeight="150.0" prefWidth="440.0">
            <columns>
                <TableColumn fx:id="colVer" prefWidth="100.0" text="Version" />
                <TableColumn fx:id="colUser" prefWidth="150.0" text="Changed By" />
                <TableColumn fx:id="colTime" prefWidth="150.0" text="Time" />
            </columns>
        </TableView>

    </children>
</AnchorPane>
