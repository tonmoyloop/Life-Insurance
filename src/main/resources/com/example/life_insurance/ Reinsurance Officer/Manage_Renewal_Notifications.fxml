<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance.Manage_Renewal_NotificationsController">
    <children>

        <Label layoutX="30.0" layoutY="30.0" text="Days Remaining (30/60/90):" />
        <TextField fx:id="filterInput" layoutX="30.0" layoutY="50.0" />

        <Button fx:id="searchButton" layoutX="200.0" layoutY="50.0" mnemonicParsing="false" onAction="#searchButtonOnAction" text="Search" />

        <TableView fx:id="renewalTable" layoutX="30.0" layoutY="100.0" prefHeight="152.0" prefWidth="462.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="100.0" text="Contract ID" />
                <TableColumn fx:id="colCompany" prefWidth="150.0" text="Company" />
                <TableColumn fx:id="colDays" prefWidth="100.0" text="Days Left" />
                <TableColumn fx:id="colStatus" prefWidth="150.0" text="Status" />
            </columns>
        </TableView>

        <Button fx:id="sortButton" layoutX="30.0" layoutY="259.0" mnemonicParsing="false" onAction="#sortButtonOnAction" text="Sort List" />

        <Label layoutX="30.0" layoutY="298.0" text="Update Status (Type Pending or Contacted):" />
        <TextField fx:id="statusInput" layoutX="30.0" layoutY="331.0" prefHeight="26.0" prefWidth="134.0" />

        <Button fx:id="saveButton" layoutX="450.0" layoutY="344.0" mnemonicParsing="false" onAction="#saveButtonOnAction" text="Save Update" />

    </children>
</AnchorPane>
