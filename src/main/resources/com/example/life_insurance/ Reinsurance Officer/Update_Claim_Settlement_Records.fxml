<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.life_insurance.Update_Claim_Settlement_RecordsController">
    <children>

        <Label layoutX="30.0" layoutY="30.0" text="Enter Claim ID:" />
        <TextField fx:id="searchField" layoutX="30.0" layoutY="50.0" />
        <Button fx:id="findButton" layoutX="200.0" layoutY="50.0" mnemonicParsing="false" onAction="#findButtonOnAction" text="Find Claim" />

        <TableView fx:id="claimsTable" layoutX="30.0" layoutY="100.0" prefHeight="200.0" prefWidth="540.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="colAmount" prefWidth="100.0" text="Amount" />
                <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
            </columns>
        </TableView>

        <Label layoutX="30.0" layoutY="320.0" text="Update Amount:" />
        <TextField fx:id="amountField" layoutX="30.0" layoutY="340.0" />

        <Label layoutX="200.0" layoutY="320.0" text="Update Date:" />
        <DatePicker fx:id="dateField" layoutX="200.0" layoutY="340.0" onAction="#dateFieldOnAction" />

        <Button fx:id="saveButton" layoutX="30.0" layoutY="400.0" mnemonicParsing="false" onAction="#saveButtonOnAction" prefWidth="350.0" text="Save Changes" />

    </children>
</AnchorPane>
