<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="550" prefWidth="700" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TrainingManagementController">

    <!-- Title -->
    <Label layoutX="217.0" layoutY="14.0" maxWidth="Infinity" prefHeight="35.0" prefWidth="266.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Training Management" AnchorPane.leftAnchor="217.0" AnchorPane.rightAnchor="217.0" AnchorPane.topAnchor="14.0" />

    <!-- Create New Training Session -->
    <Button fx:id="btnCreateSession" onAction="#handleCreateSession" prefHeight="30" prefWidth="200" text="Create New Training Session" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="60" />

    <!-- Session Title -->
    <Label text="Session Title:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="110" />
    <TextField fx:id="txtSessionTitle" prefHeight="30" promptText="Enter Session Title" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="130" />

    <!-- Session Date -->
    <Label text="Session Date:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="170" />
    <DatePicker fx:id="dateSession" prefWidth="200" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="190" />

    <!-- Participants -->
    <Label text="Participants:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="230" />
    <TextField fx:id="txtParticipants" prefHeight="30" promptText="Enter Participants" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="250" />

    <!-- Upload Training Materials -->
    <Label text="Upload Materials:" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="290" />
    <Button onAction="#handleUploadMaterials" prefHeight="30" prefWidth="200" text="Upload PDF/Video/Slides" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="310" />

    <!-- Publish Session Button -->
    <Button onAction="#handlePublishSession" prefHeight="30" prefWidth="180" text="Publish Session" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="360" />

    <!-- Status / Notification Message -->
    <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="410" />

    <!-- Logout Button -->
    <Button onAction="#handleLogout" prefHeight="30" prefWidth="100" text="Logout" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="40" />

</AnchorPane>
